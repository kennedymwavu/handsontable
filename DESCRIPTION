Package: handsontable
Type: Package
Title: Interface to the 'Handsontable' JavaScript Data Grid v6.2.2
Version: 0.1.0
Authors@R: c(
    person("Kennedy", "Mwavu", , "mwavukennedy@gmail.com", role = c("aut", "cre", "cph"),
           comment = c("Maintainer/developer of handsontable since 2025", ORCID = "0009-0006-3157-7234")),
    person("Handsoncode sp. z o.o.", , , role = c("ctb", "cph"), comment = "Handsontable library")
